<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace要和映射接口的全类名保持一致-->
<mapper namespace="com.mffff.mybatis.mapper.UserMapper">
    <cache type="org.mybatis.caches.ehcache.EhcacheCache" />
    <!--  type设置实体类的类型  -->
    <!--    <resultMap id="testing" type="user">-->
    <!--        &lt;!&ndash;   设置主键的映射关系     &ndash;&gt;-->
    <!--        <id property="" column=""></id>-->
    <!--        &lt;!&ndash;   设置普通字段的映射关系    &ndash;&gt;-->
    <!--        <result property="" column=""></result>-->
    <!--    </resultMap>-->

    <insert id="insertUser">
        insert into user
        values (null, 'mf', '123456')
    </insert>
    <!--  获取自动递增的主键，useGeneratedKeys设置当前标签中的sql使用了自增的主键 keyProperty将自增的主键值赋值给传输到映射文件中参数的某个属性      -->
    <insert id="insertUserGetId" useGeneratedKeys="true" keyProperty="id">
        insert into user
        values (null, #{username}, #{password})
    </insert>
    <select id="selectUsers" resultType="user">
        select *
        from user
    </select>
    <select id="selectUsersByName" resultType="map">
        select *
        from user
        where username like "%"#{username}"%"
    </select>
    <select id="selectUserByCondition" resultType="user">
        select * from user
        <trim prefix="where" prefixOverrides="and">
                <if test="username != null and username != ''">
                     username = #{username}
                </if>
                <if test="password != null and password != ''">
                    and password = #{password}
                </if>
        </trim>
    </select>
    <select id="selectUserByConditionOne" resultType="user">
        select * from user
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
        </where>
    </select>
</mapper>